{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Core v2 LCP Response",
    "type": "object",
    "required": [
        "ok"
    ],
    "properties": {
        "ok": {
            "type": "boolean"
        },
        "action": {
            "type": "string"
        },
        "files": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "target_file": {
            "type": "string"
        },
        "summary": {
            "type": "string"
        },
        "issues": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "recommendations": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "new_jobs": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "task",
                    "params"
                ],
                "properties": {
                    "task": {
                        "type": "string"
                    },
                    "params": {
                        "type": "object"
                    }
                }
            }
        },
        "file": {
            "type": "string"
        },
        "content": {
            "type": "string"
        },
        "patch": {
            "type": "string"
        },
        "patch_description": {
            "type": "string"
        },
        "error": {
            "type": "string"
        }
    },
    "additionalProperties": true
}